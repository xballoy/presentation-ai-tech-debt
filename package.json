{
  "name": "ai-tech-debt-presentation",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "pnpm run build:en && pnpm run build:fr",
    "build:en": "slidev build slides-en.md --base /en/ --out dist/en",
    "build:fr": "slidev build slides-fr.md --base /fr/ --out dist/fr",
    "dev:fr": "slidev --open slides-fr.md",
    "dev:en": "slidev --open slides-en.md",
    "format:check": "prettier slides-fr.md slides-en.md pages --check",
    "format:fix": "prettier slides-fr.md slides-en.md pages pages --write"
  },
  "dependencies": {
    "@slidev/cli": "52.9.1",
    "@slidev/theme-default": "0.25.0",
    "vue": "3.5.25"
  },
  "devDependencies": {
    "prettier": "3.6.2",
    "prettier-plugin-slidev": "1.0.5"
  }
}
